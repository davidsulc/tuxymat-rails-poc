= simple_form_for(@vending_machine, :html => { :class => 'form-horizontal' }) do |f|
  = f.error_notification

  .form-inputs
    = f.input :serial_number
    = f.input :purchase_price, :hint => "What was the original purchase price ?"
    = f.input :age_verification, :as => :boolean

  .form-actions
    = f.button :submit, class: "btn btn-primary"
    = link_to "Cancel", :back, class: "btn"
